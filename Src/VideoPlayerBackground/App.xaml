<Application x:Class="VideoPlayerBackground.App"    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
             xmlns:mdl="using:VpxCmn.Model" 
             xmlns:asl="using:AsLink"
             xmlns:Vws="using:VideoPlayerBackground.Vws" 
             xmlns:lcl="using:VideoPlayerBackground"            RequestedTheme="Dark">
  <Application.Resources>

    <Style TargetType="TextBlock" >
      <Setter Property="VerticalAlignment"  Value="Center"  />
      <Setter Property="Foreground"         Value="#888"  />
      <Setter Property="Margin"             Value="2 3" />
    </Style>
    <Style TargetType="TextBox" >
      <Setter Property="VerticalAlignment"  Value="Center"  />
      <Setter Property="Foreground"         Value="#ff0"  />
      <Setter Property="Margin"             Value="10" />
      <!--<Setter Property="Width"              Value="110" />-->
    </Style>
    <Style TargetType="AppBarButton" >
      <Setter Property="Margin"             Value="2 5" />
    </Style>

  </Application.Resources>
</Application>
